{
  "dashboard": {
    "id": null,
    "uid": "ledgerx-main",
    "title": "LedgerX MLOps Dashboard",
    "tags": ["mlops", "ledgerx", "invoice-intelligence"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(ledgerx_predictions_total[1m])",
            "legendFormat": "{{model}} - {{prediction_class}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Prediction Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ledgerx_prediction_latency_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{model}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ledgerx_prediction_latency_seconds_bucket[5m]))",
            "legendFormat": "p50 - {{model}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
        "type": "stat",
        "title": "Total Predictions (Today)",
        "targets": [
          {
            "expr": "sum(ledgerx_predictions_total)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8},
        "type": "stat",
        "title": "Quality: Good vs Bad",
        "targets": [
          {
            "expr": "ledgerx_quality_good_total",
            "legendFormat": "Good",
            "refId": "A"
          },
          {
            "expr": "ledgerx_quality_bad_total",
            "legendFormat": "Bad",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 8},
        "type": "stat",
        "title": "Failure Risk Predictions",
        "targets": [
          {
            "expr": "ledgerx_failure_safe_total",
            "legendFormat": "Safe",
            "refId": "A"
          },
          {
            "expr": "ledgerx_failure_risk_total",
            "legendFormat": "Risk",
            "refId": "B"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 8},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(ledgerx_prediction_errors_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "graph",
        "title": "Model Confidence Scores",
        "targets": [
          {
            "expr": "ledgerx_quality_probability",
            "legendFormat": "Quality Model Confidence",
            "refId": "A"
          },
          {
            "expr": "ledgerx_failure_probability",
            "legendFormat": "Failure Model Confidence",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "graph",
        "title": "Feature Distributions",
        "targets": [
          {
            "expr": "rate(ledgerx_feature_blur_score_bucket[5m])",
            "legendFormat": "Blur Score",
            "refId": "A"
          },
          {
            "expr": "rate(ledgerx_feature_ocr_confidence_bucket[5m])",
            "legendFormat": "OCR Confidence",
            "refId": "B"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  },
  "overwrite": true
}